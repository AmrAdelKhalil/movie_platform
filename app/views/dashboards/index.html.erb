<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

      <h1 class="my-4">Movies
        <small>list</small>
      </h1>

      <% @movies.each do |movie| %>
        <!-- Blog Post -->
        <div class="card mb-4">
          <img class="card-img-top" src="<%= movie.image.url %>" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"><%= movie.name %></h2>
            <p class="card-text">Release date:
              <% if movie.release_date.nil? %>
                Not specified yet.
              <% else %>
                <%= movie.release_date.strftime('%Y-%m-%d') %>
            <% end %>
            </p>
            <a href="#" class="btn btn-primary">Know More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on <%= movie.created_at.strftime('%b, %d %Y') %>
          </div>
        </div>
      <% end %>

      <!-- Pagination -->
<!--      <ul class="pagination justify-content-center mb-4">-->
<!--        <li class="page-item">-->
<!--          <a class="page-link" href="#">&larr; Older</a>-->
<!--        </li>-->
<!--        <li class="page-item disabled">-->
<!--          <a class="page-link" href="#">Newer &rarr;</a>-->
<!--        </li>-->
<!--      </ul>-->

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

      <!-- Filters Widget -->
      <div class="card my-4">
        <h5 class="card-header">Filters</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-12">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Opens this week</a>
                </li>
                </br>
                <li>
                  <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Grene
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <% @genres.each do |genre| %>
                        <a class="dropdown-item" href="#"><%= genre.name %></a>
                      <% end %>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Side Widget -->
      <div class="card my-4">
        <h5 class="card-header">News</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Go!</button>
            </span>
          </div>
          <br>
          <% @newses.each do |news| %>
            <div class="card-text">
              <%= news.description %>
            </div>
            <hr>
          <% end %>
        </div>
      </div>

    </div>

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
  </div>
  <!-- /.container -->
</footer>

